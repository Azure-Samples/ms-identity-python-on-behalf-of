    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "env": {
                "ENVIRONMENT":"development"
            },
            "args": [
                "runserver",
                "--noreload"
            ],
            "django": true
        },

        {
            "name": "Python: Django: SSL Dev Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "env": {
                "ENVIRONMENT":"development"
            },
            "args": [
                "runsslserver",
                "--noreload"
            ],
            "django": true
        },

        {
            "name": "Python: Django: Run Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "env": {
                "ENVIRONMENT":"development"
            },
            "args": [
                "migrate",
            ],
            "django": true
        }
    ]
}